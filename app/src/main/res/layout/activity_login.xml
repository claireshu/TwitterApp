<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/login_gradient_background"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >


    <Button
        android:id="@+id/btnSignUp"
        android:textColor="#33A5E7"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@drawable/button_signup"
        android:text="@string/signup_label"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:layout_height="45dp"
        android:onClick="loginToRest"
        android:textColor="@android:color/white"
        android:text="@string/login_label"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSignUp"
        android:layout_alignRight="@+id/btnSignUp"
        android:id="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/tvWelcome"
        android:textSize="22dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_intro"
        android:id="@+id/tvWelcomeIntro"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_twitter_bird"
        android:layout_marginTop="58dp" />

</RelativeLayout>