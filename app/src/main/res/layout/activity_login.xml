<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:background="@color/twitterColor"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >


    <Button
        android:id="@+id/btnSignUp"
        android:textColor="#33A5E7"
        android:textAllCaps="false"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_signup"
        android:text="@string/signup_label"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="60dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@id/btnSignUp"
        android:layout_alignRight="@id/btnSignUp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnSignUp"
        android:onClick="loginToRest"
        android:text="@string/login_label" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSignUp"
        android:layout_alignStart="@+id/btnSignUp"
        android:layout_marginLeft="176dp"
        android:layout_marginStart="176dp" />

</RelativeLayout>